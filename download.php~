<?php

$url = rawurldecode('http://23.235.211.194/~tecnot5/dev/apps/survey/survey.zip'); 


if ($fp = fopen($url, 'rb')) {
	
	$file = fopen("code.zip", 'w');
	$lines = 0;
	$bits = 0;

    
    while ($line = fread($fp, 1024)) {
		$lines ++;
		$bits += 1024;    	  
		fwrite($file, $line);
    }
    
    if (($bits / 1024 / 1024) > 1) {
    	$mb = ($bits / 1024 / 1024) . 'Mb'; 
    } else {
    	$mb = ($bits / 1024) . 'Kb'; 
    }
    
    echo "<p>No of lines : $lines</p>
    	<p>filesize: $mb </p>
    ";
    fclose($file);
    
} else {
	echo 'error';
}

